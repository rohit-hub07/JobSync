        </div>

        <div class="clock">
          <p>
            ON
            <span id="currentTime"></span>
          </p>
        </div>

        <div class="user-auth">
          <% if (typeof user !=='undefined' && user) { %>
            <!-- User is logged in -->
            <div class="user-status">
              <div>
                <i class="fa-solid fa-user"></i>
                <span class="user-name">Welcome, <%= user.name %>!</span>
                <% if (!user.isVerified) { %>
                  <span style="color: #ffc107; font-size: 0.8rem;">
                    <i class="fas fa-exclamation-triangle"></i> Email not verified
                  </span>
                  <form action="/resend-verification" method="POST" style="display: inline;">
                    <button type="submit" class="resend-btn">
                      <i class="fas fa-paper-plane"></i> Resend
                    </button>
                  </form>
                  <% } else { %>
                    <span style="color: #28a745; font-size: 0.8rem;">
                      <i class="fas fa-check-circle"></i> Verified
                    </span>
                    <% } %>
              </div>
              <div style="display: flex; gap: 0.5rem;">
                <% if (user.isVerified) { %>
                  <a href="/dashboard" class="auth-button" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                    <i class="fa-solid fa-tachometer-alt"></i>&nbsp;&nbsp;
                    Dashboard
                  </a>
                  <% } %>
                    <a href="/profile" class="auth-button" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                      <i class="fa-solid fa-user"></i>&nbsp;&nbsp;
                      Profile
