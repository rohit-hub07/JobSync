                      <button type="submit" class="logout-btn">
                        <i class="fa-solid fa-right-from-bracket"></i>&nbsp;&nbsp;
                        Logout
                      </button>
                    </form>
              </div>
            </div>
            <% } else { %>
              <!-- User is not logged in -->
